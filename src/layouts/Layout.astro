<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		cursor: url("/cursor/cursor.png"), auto;
		user-select: none;
  		-webkit-user-select: none;
	}

	.crt_filter {
  position: fixed;
  z-index: 1000;
  height: 100%;
  width: 100%;
  background: linear-gradient(to top, #000000, #000000, #333333, #333333);
  background-size: cover;
  background-size: 100% 5px;
  opacity: 0.05;
  pointer-events: none;
}

.crt_filter.off {
  display: none;
}

@media screen {
  .crt_filter {
    animation: scanlines infinite 50s linear;
  }
}
@keyframes scanlines {
  from {
    background-position: 0 0;
  }
  to {
    background-position: 0 -10px;
  }
}

.crt_filter.off {
  display: none;
}
</style>
